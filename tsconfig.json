{
	"$schema": "https://json.schemastore.org/tsconfig",
	"_version": "22.0.0",

	"compilerOptions": {
		"target": "es2022",
		"lib": ["es2023"],
		"module": "node16",

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node16",
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
